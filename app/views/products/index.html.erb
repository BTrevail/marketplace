<h1>List of all products</h1>

<table>
	<tr>
		<th>ID</th>
		<th>Title</th>
		<th>Price</th>
		<th>Count</th>
		<th>Created</th>
		<th>Updated</th>
	</tr>

	<% @products.each do |product| %>
	<tr>
		<td><%= product.id %></td>
		<td><%= product.title %></td>
		<td><%= product.price %></td>
		<td><%= product.count %></td>
		<td><%= product.created_at %></td>
		<td><%= product.updated_at %></td>
		<td><%= link_to 'Edit', edit_product_path(product) %></td>
		<td><%= link_to 'Show', product_path(product) %></td>
		<td><%= link_to 'Delete', product_path(product), method: :delete, data: {confirm: "Are you sure you wich to delete product: " + product.id.to_s} %></td>
	</tr>
	<% end %>

</table>

<p><%= link_to "Create new Product", new_product_path %></p>