<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :username %><br/>
    <%= f.text_field :username, placeholder: "Enter Username" %>
  </p>
    <p>
    <%= f.label :email %><br/>
    <%= f.email_field :email, placeholder: "Enter Email" %>
  </p>
  </p>
    <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password, placeholder: "Enter Password" %>
  </p>
  <p>
  	<%= f.submit(@user.new_record? ? "Signup" : "Update") %>
  </p>
<% end %>

<p><%= link_to "home", root_path %></p>